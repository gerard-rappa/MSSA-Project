@model IEnumerable<Meme>


@Html.Partial("MyPartial")

@foreach (var r in Model)
{
    if (r.ImgUrl.Contains(".webm"))
    {
        <div class="flex-fill px-4" style="text-align:center; width:auto">
            <video controls class="img-fluid" type="video/webm" style="max-width:100%; max-height:650px; background-size:contain" src="https://litmemes.blob.core.windows.net/images/@r.ImgUrl"></video>
            <p class="container-fluid font-weight-light">Latitude: @Math.Round(r.Latitude, 2) <br> @Math.Round(r.Longitude, 2)</p>
            <br />
        </div>
    }
    else
    {
        <div class="flex-fill px-4" style="text-align:center; width:100%;">
            <img class="img-fluid rounded" style="max-width:100%; max-height:650px; background-size:contain" src="https://litmemes.blob.core.windows.net/images/@r.ImgUrl" />
            <p class="container-fluid font-weight-light">Latitude: @Math.Round(r.Latitude, 2) <br>Longitude: @Math.Round(r.Longitude, 2)</p>
            <br />
        </div>
    }
}