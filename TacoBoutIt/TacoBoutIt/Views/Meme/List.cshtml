@model IEnumerable<Meme>

@foreach (var r in Model)
{
    if (r.ImgUrl.Contains(".webm"))
    {
        <div class="flex-fill px-4" style="text-align:center; width:100%">
            <video controls class="img-fluid" type="video/webm" style="max-width:500px; width:100%" src="~/Images/@r.ImgUrl"></video>
            <p class="container-fluid font-weight-light">Latitude: @r.Latitude <br>Longitude: @r.Longitude</p>
            <br />
        </div>
    }
    else
    {
        <div class="flex-fill px-4" style="text-align:center; width:100%">
            <img class="img-fluid rounded" style="max-width:500px; width:100%" src="~/Images/@r.ImgUrl" />
            <p class="container-fluid font-weight-light">Latitude: @r.Latitude <br>Longitude: @r.Longitude</p>
            <br />
        </div>
    }
}

